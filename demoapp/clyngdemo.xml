<?xml version="1.0" encoding="UTF-8"?>
<project name="clyngdemo" default="all">
  
  
  <property file="clyngdemo.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="compiler.excluded">
    <exclude name="${basedir}/gen/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.android_2.2_google_apis" value="${jdk.home.android_2.2_google_apis}"/>
  <path id="jdk.classpath.android_2.2_google_apis">
    <fileset dir="${jdk.home.android_2.2_google_apis}">
      <include name="platforms/android-8/android.jar"/>
      <include name="add-ons/addon_google_apis_google_inc_8/libs/maps.jar"/>
      <include name="platforms/android-8/data/res"/>
      <include name="tools/support/annotations.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.6}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.6}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.6"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.clyngmobile.classpath">
    <pathelement location="${basedir}/../corelib/out/artifacts/ClyngMobile_jar/ClyngMobile.jar"/>
  </path>
  
  <!-- Modules -->
  
  
  <!-- Module demoapp -->
  
  <dirname property="module.demoapp.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.demoapp" value="${jdk.home.android_2.2_google_apis}"/>
  <property name="module.jdk.bin.demoapp" value="${jdk.bin.android_2.2_google_apis}"/>
  <property name="module.jdk.classpath.demoapp" value="jdk.classpath.android_2.2_google_apis"/>
  
  <property name="compiler.args.demoapp" value="${compiler.args}"/>
  
  <property name="demoapp.output.dir" value="${module.demoapp.basedir}/out/production/demoapp"/>
  <property name="demoapp.testoutput.dir" value="${module.demoapp.basedir}/out/test/demoapp"/>
  
  <path id="demoapp.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="demoapp.module.production.classpath">
    <path refid="${module.jdk.classpath.demoapp}"/>
    <path refid="library.clyngmobile.classpath"/>
  </path>
  
  <path id="demoapp.runtime.production.module.classpath">
    <pathelement location="${demoapp.output.dir}"/>
    <path refid="library.clyngmobile.classpath"/>
  </path>
  
  <path id="demoapp.module.classpath">
    <path refid="${module.jdk.classpath.demoapp}"/>
    <pathelement location="${demoapp.output.dir}"/>
    <path refid="library.clyngmobile.classpath"/>
  </path>
  
  <path id="demoapp.runtime.module.classpath">
    <pathelement location="${demoapp.testoutput.dir}"/>
    <pathelement location="${demoapp.output.dir}"/>
    <path refid="library.clyngmobile.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.demoapp">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.demoapp">
    <patternset refid="compiler.excluded"/>
    <patternset refid="excluded.from.module.demoapp"/>
  </patternset>
  
  <path id="demoapp.module.sourcepath">
    <dirset dir="${module.demoapp.basedir}">
      <include name="src"/>
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.demoapp" depends="compile.module.demoapp.production,compile.module.demoapp.tests" description="Compile module demoapp"/>
  
  <target name="compile.module.demoapp.production" description="Compile module demoapp; production classes">
    <mkdir dir="${demoapp.output.dir}"/>
    <javac destdir="${demoapp.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.demoapp}"/>
      <bootclasspath refid="demoapp.module.bootclasspath"/>
      <classpath refid="demoapp.module.production.classpath"/>
      <src refid="demoapp.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.demoapp"/>
    </javac>
    
    <copy todir="${demoapp.output.dir}">
      <fileset dir="${module.demoapp.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.demoapp"/>
      </fileset>
      <fileset dir="${module.demoapp.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.demoapp"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.demoapp.tests" depends="compile.module.demoapp.production" description="compile module demoapp; test classes" unless="skip.tests"/>
  
  <target name="clean.module.demoapp" description="cleanup module">
    <delete dir="${demoapp.output.dir}"/>
    <delete dir="${demoapp.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.demoapp" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.demoapp" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>